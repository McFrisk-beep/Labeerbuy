    },
    "properties": {
      "kdlsuggestabeer.enable": {
        "group": "kodellaApp",
        "subtab": "kdlsuggestabeer",
        "type": "boolean",
        "title": "Enable Suggest A Beer",
        "description": "Enable Suggest A Beer",
        "default": false
      },
      "kdlsuggestabeer.errormessage": {
        "group": "kodellaApp",
        "subtab": "kdlsuggestabeer",
        "type": "string",
