      "kdlsuggestabeer.criteria": {
        "group": "kodellaApp",
        "subtab": "kdlsuggestabeer",
        "type": "array",
        "title": "Suggestion Criteria",
        "description": "Criteria builder for Beer Suggestion",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "title": "Label",
              "description": "Label of the question"
